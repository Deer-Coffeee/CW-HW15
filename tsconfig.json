{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES6"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "type": "module"

  }
}

